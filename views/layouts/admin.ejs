<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | SETU Admin</title>
  <!-- Favicon -->
  <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <div class="admin-container">
    <% if (typeof admin !== 'undefined') { %>
      <!-- Sidebar -->
      <aside class="admin-sidebar">
        <div class="sidebar-header">
          <div class="logo">
            <img src="/images/logo.png" alt="SETU Logo">
            <span>SETU Admin</span>
          </div>
          <button class="sidebar-toggle" id="sidebarToggle">
            <i class="fas fa-bars"></i>
          </button>
        </div>
        
        <nav class="sidebar-nav">
          <ul>
            <li class="<%= page === 'dashboard' ? 'active' : '' %>">
              <a href="/admin/dashboard">
                <i class="fas fa-tachometer-alt"></i>
                <span>Dashboard</span>
              </a>
            </li>
            <li class="<%= page === 'agencies' ? 'active' : '' %>">
              <a href="/admin/agencies">
                <i class="fas fa-building"></i>
                <span>Agencies</span>
              </a>
            </li>
            <li class="<%= page === 'customers' ? 'active' : '' %>">
              <a href="/admin/customers">
                <i class="fas fa-users"></i>
                <span>Customers</span>
              </a>
            </li>
            <li class="<%= page === 'products' ? 'active' : '' %>">
              <a href="/admin/products">
                <i class="fas fa-box"></i>
                <span>Products</span>
              </a>
            </li>
            <li class="<%= page === 'orders' ? 'active' : '' %>">
              <a href="/admin/orders">
                <i class="fas fa-shopping-cart"></i>
                <span>Orders</span>
              </a>
            </li>
            <% if (admin.role === 'superadmin') { %>
              <li class="<%= page === 'admins' ? 'active' : '' %>">
                <a href="/admin/admins">
                  <i class="fas fa-user-shield"></i>
                  <span>Admins</span>
                </a>
              </li>
            <% } %>
            <li class="<%= page === 'settings' ? 'active' : '' %>">
              <a href="/admin/settings">
                <i class="fas fa-cog"></i>
                <span>Settings</span>
              </a>
            </li>
          </ul>
        </nav>
        
        <div class="sidebar-footer">
          <a href="/admin/logout" class="logout-btn">
            <i class="fas fa-sign-out-alt"></i>
            <span>Logout</span>
          </a>
        </div>
      </aside>
    <% } %>
    
    <!-- Main Content -->
    <main class="admin-content <%= typeof admin === 'undefined' ? 'full-width' : '' %>">
      <% if (typeof admin !== 'undefined') { %>
        <!-- Header -->
        <header class="admin-header">
          <div class="header-left">
            <h1 class="page-title"><%= title %></h1>
          </div>
          <div class="header-right">
            <div class="admin-notifications">
              <button class="notification-btn">
                <i class="fas fa-bell"></i>
                <span class="notification-badge">3</span>
              </button>
            </div>
            <div class="admin-profile">
              <div class="profile-info">
                <span class="admin-name"><%= admin.username %></span>
                <span class="admin-role"><%= admin.role %></span>
              </div>
              <div class="profile-avatar">
                <img src="https://ui-avatars.com/api/?name=<%= admin.username %>&background=4CAF50&color=fff" alt="Admin Avatar">
              </div>
            </div>
          </div>
        </header>
      <% } %>
      
      <!-- Flash Messages -->
      <% if(typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
        <div class="alert alert-success">
          <%= success_msg %>
          <button class="alert-close">&times;</button>
        </div>
      <% } %>
      
      <% if(typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
        <div class="alert alert-danger">
          <%= error_msg %>
          <button class="alert-close">&times;</button>
        </div>
      <% } %>
      
      <!-- Content -->
      <div class="admin-content-body">
        <%- body %>
      </div>
    </main>
  </div>
  
  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="/js/admin.js"></script>
</body>
</html>

