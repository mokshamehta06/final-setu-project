<%- include('../partials/header') %>

<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-body text-center p-5">
          <div class="mb-4">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
          </div>
          <h2 class="mb-3">Thank You for Your Order!</h2>
          <p class="lead mb-4">Your order has been placed successfully.</p>
          <p class="mb-4">Order ID: <strong>#<%= orderId || '12345678' %></strong></p>
          <p class="text-muted mb-4">
            We've sent a confirmation email to your registered email address.<br>
            You can track your order status in the "My Orders" section.
          </p>
          <div class="d-flex justify-content-center gap-3">
            <a href="/customer/orders" class="btn btn-primary">View My Orders</a>
            <a href="/customer/browsing" class="btn btn-outline-primary">Continue Shopping</a>
          </div>
        </div>
      </div>
      
      <div class="card shadow-sm mt-4">
        <div class="card-header">
          <h5 class="mb-0">What Happens Next?</h5>
        </div>
        <div class="card-body">
          <div class="d-flex mb-3">
            <div class="me-3">
              <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                <i class="bi bi-box-seam"></i>
              </div>
            </div>
            <div>
              <h6>Order Processing</h6>
              <p class="text-muted mb-0">We're preparing your order for shipment.</p>
            </div>
          </div>
          <div class="d-flex mb-3">
            <div class="me-3">
              <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                <i class="bi bi-truck"></i>
              </div>
            </div>
            <div>
              <h6>Shipping</h6>
              <p class="text-muted mb-0">Your order will be shipped within 1-2 business days.</p>
            </div>
          </div>
          <div class="d-flex">
            <div class="me-3">
              <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                <i class="bi bi-house-door"></i>
              </div>
            </div>
            <div>
              <h6>Delivery</h6>
              <p class="text-muted mb-0">You'll receive your order within 3-5 business days.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>





































































































































  
