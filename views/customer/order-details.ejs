<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Details</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
<link rel="stylesheet" href="/css/dashboard-variables.css">
    <style>

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            background-color: var(--primary-50);
            min-height: 100vh;
            padding: 2rem;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            background-color: var(--primary-600);
            color: white;
            padding: 2rem;
            border-radius: var(--card-radius);
            margin-bottom: 2rem;
            text-align: center;
            box-shadow: var(--card-shadow);
        }

        .orders-list {
            display: grid;
            gap: 2rem;
        }

        .order-card {
            background-color: white;
            border-radius: var(--card-radius);
            padding: 1.5rem;
            box-shadow: var(--card-shadow);
            transition: var(--transition);
            border: 1px solid var(--neutral-200);
        }

        .order-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--hover-shadow);
        }

        .order-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid var(--neutral-100);
        }

        .order-id {
            font-weight: 600;
            color: var(--primary-600);
            font-size: 1.3rem;
        }

        .order-status {
            background-color: var(--primary-100);
            color: var(--primary-700);
            padding: 0.5rem 1rem;
            border-radius: var(--badge-radius);
            font-size: 0.9rem;
            text-transform: capitalize;
        }

        .order-items {
            margin: 1rem 0;
        }

        .item {
            display: grid;
            grid-template-columns: 3fr 1fr 1fr 1fr;
            padding: 0.75rem 0;
            border-bottom: 1px solid var(--neutral-100);
            color: var(--neutral-700);
        }

        .item:last-child {
            border-bottom: none;
        }

        .item strong {
            color: var(--primary-600);
        }

        .order-total {
            text-align: right;
            font-weight: 600;
            margin-top: 1rem;
            font-size: 1.3rem;
            color: var(--primary-600);
        }

        .empty-message {
            text-align: center;
            color: var(--primary-600);
            padding: 2rem;
            background: white;
            border-radius: var(--card-radius);
            box-shadow: var(--card-shadow);
        }

        @media (max-width: 768px) {
            .order-card {
                padding: 1rem;
            }

            .order-items {
                margin: 0.5rem 0;
            }

            .item {
                grid-template-columns: 2fr 1fr 1fr;
            }

            .order-total {
                font-size: 1.1rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Customer Orders</h1>
        </div>
        <div id="orders-list" class="orders-list">
            <!-- Orders will be inserted here by JavaScript -->
        </div>
    </div>

    <script>
        // Sample order data - in a real application, this would come from a backend
        const orders = [
            {
                id: 'ORD-2024-001',
                date: '2024-03-14',
                status: 'Processing',
                items: [
                    { name: 'Blue Widget', quantity: 2, price: 29.99 },
                    { name: 'White Gadget', quantity: 1, price: 49.99 },
                    { name: 'Premium Tool', quantity: 3, price: 19.99 }
                ]
            },
            {
                id: 'ORD-2024-002',
                date: '2024-03-13',
                status: 'Shipped',
                items: [
                    { name: 'Deluxe Package', quantity: 1, price: 99.99 },
                    { name: 'Basic Kit', quantity: 2, price: 24.99 }
                ]
            }
        ];

        function formatCurrency(amount) {
            return new Intl.NumberFormat('en-US', {
                style: 'currency',
                currency: 'USD'
            }).format(amount);
        }

        function formatDate(dateString) {
            return new Date(dateString).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });
        }

        function calculateOrderTotal(items) {
            return items.reduce((total, item) => total + (item.price * item.quantity), 0);
        }

        function renderOrders() {
            const ordersContainer = document.getElementById('orders-list');

            if (orders.length === 0) {
                ordersContainer.innerHTML = '<div class="empty-message">No orders found</div>';
                return;
            }

            ordersContainer.innerHTML = orders.map(order => `
                <div class="order-card">
                    <div class="order-header">
                        <div>
                            <div class="order-id">${order.id}</div>
                            <div>${formatDate(order.date)}</div>
                        </div>
                        <span class="order-status">${order.status}</span>
                    </div>
                    <div class="order-items">
                        <div class="item">
                            <strong>Item</strong>
                            <strong>Quantity</strong>
                            <strong>Price</strong>
                            <strong>Subtotal</strong>
                        </div>
                        ${order.items.map(item => `
                            <div class="item">
                                <div>${item.name}</div>
                                <div>${item.quantity}</div>
                                <div>${formatCurrency(item.price)}</div>
                                <div>${formatCurrency(item.price * item.quantity)}</div>
                            </div>
                        `).join('')}
                    </div>
                    <div class="order-total">
                        Total: ${formatCurrency(calculateOrderTotal(order.items))}
                    </div>
                </div>
            `).join('');
        }

        // Initialize the page
        document.addEventListener('DOMContentLoaded', renderOrders);
    </script>
</body>
</html>