  <!-- Customer Browsing Page -->
  <% if(page === 'customer-browsing') { %>
    <div class="container">
      <!-- Mobile Sidebar Toggle -->
      <button class="mobile-sidebar-toggle" id="sidebarToggle">
        <i class="fas fa-bars"></i>
      </button>

      <!-- Mobile Header -->
      <div class="mobile-header">
        <div class="mobile-header-content">
          <a href="/customer/browsing" class="mobile-logo">SETU</a>
          <div class="mobile-actions">
            <a href="index" class="mobile-cart-icon">
              <i class="fas fa-shopping-cart"></i>
              <span class="cart-count" id="mobileCartCount">0</span>
            </a>
          </div>
        </div>
        <!-- Mobile Search Bar -->
        <div class="mobile-search-container">
          <form class="search-form" action="/customer/search" method="POST">
            <input type="text" name="searchTerm" placeholder="Search products..." class="search-input">
            <button type="submit" class="search-button">
              <i class="fas fa-search"></i>
            </button>
          </form>
        </div>
      </div>

      <!-- Sidebar -->
      <%- include('partials/sidebar') %>

      <!-- Main Content -->
      <main class="main-content">
        <!-- Desktop Search Bar -->
        <div class="search-container">
          <form class="search-form" action="/customer/search" method="POST">
            <input type="text" name="searchTerm" placeholder="Search products..." class="search-input" value="<%= locals.searchTerm || '' %>">
            <button type="submit" class="search-button">
              <i class="fas fa-search"></i>
            </button>
          </form>
        </div>

        <div class="page-header">
          <h1 class="page-title">Browse Products</h1>
          <p class="page-description">Explore our wide range of products</p>
        </div>

        <div class="tabs">
          <div class="tab-list">
            <div class="tab-item <%= activeTab === 'all' ? 'active' : '' %>" data-tab="all">
              <a href="/customer/browsing">All Categories</a>
            </div>
            <div class="tab-item <%= activeTab === 'electronics' ? 'active' : '' %>" data-tab="electronics">
              <a href="/customer/browsing/electronics">Electronics</a>
            </div>
            <div class="tab-item <%= activeTab === 'clothing' ? 'active' : '' %>" data-tab="clothing">
              <a href="/customer/browsing/clothing">Clothing</a>
            </div>
            <div class="tab-item <%= activeTab === 'home' ? 'active' : '' %>" data-tab="home">
              <a href="/customer/browsing/home">Home & Kitchen</a>
            </div>
          </div>

          <div class="tab-content active">
            <div class="product-grid">
              <% if(products && products.length > 0) { %>
                <% products.forEach(function(product) { %>
                  <div class="product-card" data-category="<%= product.category %>">
                    <div style="position: relative;">
                      <img src="<%= product.image %>" alt="<%= product.name %>" class="product-image">
                      <% if(product.isNew) { %>
                        <span class="product-badge">New</span>
                      <% } %>
                    </div>
                    <div class="product-content">
                      <div class="product-category"><%= product.category.charAt(0).toUpperCase() + product.category.slice(1) %></div>
                      <h3 class="product-title"><%= product.name %></h3>
                      <div class="product-price">$<%= product.price.toFixed(2) %></div>
                      <div class="product-actions">
                        <button class="btn btn-primary add-to-cart add-to-cart-btn" 
                          data-id="<%= product._id %>" 
                          data-name="<%= product.name %>" 
                          data-price="<%= product.price %>" 
                          data-image="<%= product.image %>">
                          <i class="fas fa-shopping-cart"></i> Add to Cart
                        </button>
                      </div>
                    </div>
                  </div>
                <% }); %>
              <% } else { %>
                <p>No products available in this category yet.</p>
              <% } %>
            </div>
          </div>
        </div>
      </main>
    </div>
  <% } %>

