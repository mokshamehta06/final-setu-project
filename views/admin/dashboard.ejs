<link rel="stylesheet" href="/css/admin.css">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="dashboard-container">
    <!-- Stats Cards -->
    <div class="stats-grid">
      <div class="stats-card">
        <div class="stats-icon pending">
          <i class="fas fa-clock"></i>
        </div>
        <div class="stats-info">
          <h3>Pending Agencies</h3>
          <p class="stats-value"><%= stats.pendingAgencies %></p>
        </div>
      </div>

      <div class="stats-card">
        <div class="stats-icon approved">
          <i class="fas fa-check-circle"></i>
        </div>
        <div class="stats-info">
          <h3>Approved Agencies</h3>
          <p class="stats-value"><%= stats.approvedAgencies %></p>
        </div>
      </div>

      <div class="stats-card">
        <div class="stats-icon rejected">
          <i class="fas fa-times-circle"></i>
        </div>
        <div class="stats-info">
          <h3>Rejected Agencies</h3>
          <p class="stats-value"><%= stats.rejectedAgencies %></p>
        </div>
      </div>
    </div>

    <!-- Charts Section -->
    <div class="dashboard-charts">
      <div class="dashboard-card">
        <div class="card-header">
          <h2>Agency Status Distribution</h2>
        </div>
        <div class="card-body">
          <div class="chart-container">
            <canvas id="agencyStatusChart"></canvas>
          </div>
        </div>
      </div>
    </div>

    <!-- Pending Documents Section -->
    <div class="dashboard-card">
      <div class="card-header">
        <h2>Pending Document Approvals</h2>
      </div>
      <div class="card-body">
        <% if (stats.pendingDocuments && stats.pendingDocuments.length > 0) { %>
          <div class="documents-grid">
            <% stats.pendingDocuments.forEach(doc => { %>
              <div class="document-card">
                <div class="document-info">
                  <h4><%= doc.documentType.replace(/([A-Z])/g, ' $1').replace(/^./, str => str.toUpperCase()) %></h4>
                  <p>Uploaded by: <strong><%= doc.agencyName %></strong></p>
                  <p class="document-date">Uploaded on: <%= new Date(doc.uploadedAt).toLocaleDateString() %></p>
                  <div class="document-status status-pending">
                    <i class="fas fa-clock"></i> Pending Approval
                  </div>
                </div>
                <div class="document-preview">
                  <% if (doc.documentPath.endsWith('.pdf')) { %>
                    <div class="pdf-icon"><i class="fas fa-file-pdf"></i></div>
                  <% } else { %>
                    <img src="<%= doc.documentPath %>" alt="Document Preview">
                  <% } %>
                </div>
                <div class="document-actions">
                  <a href="<%= doc.documentPath %>" target="_blank" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i> View</a>
                  <div class="approval-actions">
                    <form action="/admin/agencies/<%= doc.agencyId %>/documents/<%= doc.documentType %>/approve" method="POST">
                      <button type="submit" class="btn btn-sm btn-success"><i class="fas fa-check"></i> Approve</button>
                    </form>
                    <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#rejectModal<%= doc.agencyId %><%= doc.documentType %>"><i class="fas fa-times"></i> Reject</button>
                  </div>
                </div>
              </div>

              <!-- Rejection Modal -->
              <div class="modal fade" id="rejectModal<%= doc.agencyId %><%= doc.documentType %>" tabindex="-1" role="dialog" aria-labelledby="rejectModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="rejectModalLabel">Reject Document</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <form action="/admin/agencies/<%= doc.agencyId %>/documents/<%= doc.documentType %>/reject" method="POST">
                      <div class="modal-body">
                        <div class="form-group">
                          <label for="reason">Reason for Rejection</label>
                          <textarea name="reason" id="reason" class="form-control" rows="3" required></textarea>
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Reject Document</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <div class="empty-state">
            <h3>No Pending Documents</h3>
            <p>There are no documents waiting for approval.</p>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Recent Agencies -->
    <div class="dashboard-card">
      <div class="card-header">
        <h2>Recent Agency Registrations</h2>
      </div>
      <div class="card-body">
        <% if (stats.recentAgencies && stats.recentAgencies.length > 0) { %>
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Agency ID</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Status</th>
                  <th>Date</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% stats.recentAgencies.forEach(agency => { %>
                  <tr>
                    <td><%= agency._id %></td>
                    <td><%= agency.name %></td>
                    <td><%= agency.email %></td>
                    <td>
                      <span class="status-badge status-<%= agency.status || 'pending' %>">
                        <%= agency.status ? (agency.status.charAt(0).toUpperCase() + agency.status.slice(1)) : 'Pending' %>
                      </span>
                    </td>
                    <td><%= new Date(agency.createdAt).toLocaleDateString() %></td>
                    <td>
                      <% if (!agency.status || agency.status === "pending") { %>
                        <form action="/admin/agencies/<%= agency._id %>/update-status" method="POST" style="display:inline;">
                          <input type="hidden" name="status" value="approved">
                          <button type="submit" class="btn btn-sm btn-success">Approve</button>
                        </form>
                        <form action="/admin/agencies/<%= agency._id %>/update-status" method="POST" style="display:inline;">
                          <input type="hidden" name="status" value="rejected">
                          <input type="hidden" name="statusReason" value="Rejected by admin">
                          <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                        </form>
                      <% } else { %>
                        <a href="/admin/agencies/<%= agency._id %>" class="btn btn-sm btn-primary">View</a>
                      <% } %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="empty-state">
            <h3>No Recent Agencies</h3>
            <p>There are no recent agency registrations.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Check if chart element and stats exist
      const chartElement = document.getElementById('agencyStatusChart');
      if (chartElement && typeof Chart !== 'undefined') {
        const statusCtx = chartElement.getContext('2d');
        new Chart(statusCtx, {
          type: 'doughnut',
          data: {
            labels: ['Pending', 'Approved', 'Rejected'],
            datasets: [{
              data: [<%= stats.pendingAgencies %>, <%= stats.approvedAgencies %>, <%= stats.rejectedAgencies %>],
              backgroundColor: ['#FFC107', '#4CAF50', '#F44336'],
            }]
          },
          options: {
            responsive: true,
            plugins: {
              legend: { position: 'bottom' }
            },
            cutout: '70%'
          }
        });
      }
    });
  </script>
