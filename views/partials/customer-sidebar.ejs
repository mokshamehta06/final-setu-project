<div class="card shadow-sm mb-4">
  <div class="card-body p-4">
    <div class="user-profile mb-4">
      <div class="d-flex align-items-center">
        <div class="profile-pic">
          <%= user.name.charAt(0).toUpperCase() %>
        </div>
        <div class="user-info">
          <h6 class="mb-1"><%= user.name %></h6>
          <small class="text-muted"><%= user.email %></small>
        </div>
      </div>
    </div>
    <div class="list-group list-group-flush">
      <a href="/customer/dashboard" class="list-group-item list-group-item-action <%= page === 'dashboard' ? 'active' : '' %>">
        <i class="bi bi-speedometer2 me-2"></i> Dashboard
      </a>
      <a href="/customer/orders" class="list-group-item list-group-item-action <%= page === 'orders' ? 'active' : '' %>">
        <i class="bi bi-bag me-2"></i> My Orders
      </a>
      <a href="/customer/wishlist" class="list-group-item list-group-item-action <%= page === 'wishlist' ? 'active' : '' %>">
        <i class="bi bi-heart me-2"></i> Wishlist
      </a>
      <a href="/customer/profile" class="list-group-item list-group-item-action <%= page === 'profile' ? 'active' : '' %>">
        <i class="bi bi-person me-2"></i> My Profile
      </a>
      <a href="/customer/addresses" class="list-group-item list-group-item-action <%= page === 'addresses' ? 'active' : '' %>">
        <i class="bi bi-geo-alt me-2"></i> Addresses
      </a>
      <a href="/customer/support" class="list-group-item list-group-item-action <%= page === 'support' ? 'active' : '' %>">
        <i class="bi bi-question-circle me-2"></i> Support
      </a>
      <a href="/auth/logout" class="list-group-item list-group-item-action text-danger">
        <i class="bi bi-box-arrow-right me-2"></i> Logout
      </a>
    </div>
  </div>
</div>

<style>
.card {
  background: white;
  border: none;
  border-radius: 15px;
}

.card-body {
  padding: 2rem !important;
}

.profile-pic {
  width: 60px;
  height: 60px;
  background: #4a90e2;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 1.5rem;
  margin-right: 1rem;
}

.user-info h6 {
  font-size: 1.1rem;
  margin-bottom: 0.25rem;
  color: #2c3e50;
}

.user-info small {
  color: #6c757d;
}

.list-group-item-action {
  padding: 1rem 1.5rem;
  border: none;
  font-size: 1rem;
  color: #2c3e50;
  transition: all 0.2s ease;
}

.list-group-item-action i {
  font-size: 1.1rem;
  width: 24px;
  text-align: center;
}

.list-group-item-action:hover {
  background: #f8f9fa;
  transform: translateX(5px);
}

.list-group-item-action.active {
  background: #4a90e2;
  color: white;
}

.list-group-item-action.text-danger:hover {
  background: #fee2e2;
}

@media (max-width: 768px) {
  .card {
    margin: 1rem;
  }
}
</style>